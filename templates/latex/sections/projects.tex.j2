((# 
  Projects Section Template
  
  Variables:
    - title: Section title (e.g., "Projects", "Personal Projects")
    - entries: List of project entries
      - title: Project name (e.g., "E-commerce Platform")
      - organization: Project context (e.g., "Personal Project", "University Research")
      - location: Location (usually empty for projects)
      - period: Time period or year (e.g., "2023", "Summer 2022")
      - bullets: List of bullet points describing project (optional)
    
  Example data:
    {
      "title": "Projects",
      "entries": [
        {
          "title": "E-commerce Platform",
          "organization": "Personal Project (GitHub)",
          "location": "",
          "period": "2023",
          "bullets": [
            "Built full-stack web app using React and Django",
            "Integrated Stripe payment system"
          ]
        }
      ]
    }
#))
\cvsection{((( title | escape_tex )))}
\begin{cventries}
((*- for entry in entries *))
  \cventry
    {((( entry.title | escape_tex )))}           % Project Name
  {((( entry.organization | markdown_to_latex )))}    % Context (Personal/Academic/etc.)
    {((( entry.location | escape_tex )))}        % Location (optional)
    {((( entry.period | escape_tex )))}          % Duration/Year
    {
    ((*- if entry.bullets *))
      \begin{cvitems}
      ((*- for bullet in entry.bullets *))
        \item {((( bullet | markdown_to_latex )))}
      ((*- endfor *))
      \end{cvitems}
    ((*- endif *))
    }
((*- endfor *))
\end{cventries}

